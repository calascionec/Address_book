<html>
    <head>
        <title>Address Book</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <h1>Welcome to your Address Book!</h1>

            <form action="/create_contact" method="post" class="form-horizontal">
                <div class="form-group">
                    <label for="name">Contact's Name</label><br>
                    <input type="text" name="name">
                </div>
                <div class="form-group">
                    <label for="number">Contact's Phone Number</label><br>
                    <input type="tel" name="number">
                </div>
                <div class="form-group">
                    <label for="address">Contact's Address</label><br>
                    <input type="text" name="address">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Add Contact</button>
            </form>
            <form action="/delete_contacts" method="post">
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Delete All Contacts</button>
                </div>
            </form>
            {% if contacts is not empty %}
                <h1>Here are your Contacts!</h1>
                {% for contact in contacts %}
                    <ul>
                        <li>{{contact.getName}}</li>
                        <li>{{contact.getNumber}}</li>
                        <li>{{contact.getAddress}}</li>
                    </ul>
                {% endfor %}
            {% else %}
                <h1>You haven't added any contacts yet!</h1>
            {% endif %}

        </div>
    </body>
</html>
